{
  "title": "Hai HHKB",
  "rules": [
    {
      "description": "Hai HHKB: fn+`l`=arrow_left, fn+`;`==arrow_down, fn+`p`=arrow_up, fn+`'`=arrow_right",
      "manipulators": [
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "'",
            "modifiers": {
              "mandatory": [
                "fn"
              ],
              "optional": [
                "caps_lock",
                "command",
                "option",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
